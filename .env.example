# SmartArb Engine Environment Variables

# Copy this file to .env and fill in your actual values

# =============================================================================

# EXCHANGE API CREDENTIALS

# =============================================================================

# Kraken Exchange

KRAKEN_API_KEY=your_kraken_api_key_here
KRAKEN_API_SECRET=your_kraken_api_secret_here

# Bybit Exchange

BYBIT_API_KEY=your_bybit_api_key_here
BYBIT_API_SECRET=your_bybit_api_secret_here

# MEXC Exchange

MEXC_API_KEY=your_mexc_api_key_here
MEXC_API_SECRET=your_mexc_api_secret_here

# =============================================================================

# DATABASE CONFIGURATION

# =============================================================================

# PostgreSQL Database

POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DATABASE=smartarb
POSTGRES_USERNAME=smartarb_user
POSTGRES_PASSWORD=your_secure_postgres_password

# Redis Cache

REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_if_enabled
REDIS_DB=0

# =============================================================================

# AI INTEGRATION (CLAUDE)

# =============================================================================

# Anthropic Claude API

CLAUDE_API_KEY=your_anthropic_claude_api_key_here

# =============================================================================

# NOTIFICATIONS

# =============================================================================

# Telegram Bot (optional)

TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# Email Notifications (optional)

SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_email_app_password

# Webhook URL for external notifications (optional)

WEBHOOK_URL=https://your-webhook-endpoint.com/smartarb

# =============================================================================

# TRADING CONFIGURATION

# =============================================================================

# Trading mode (PAPER for testing, LIVE for real trading)

TRADING_MODE=PAPER

# Maximum daily loss in USDT (safety limit)

MAX_DAILY_LOSS=50

# Maximum position size in USDT

MAX_POSITION_SIZE=500

# Enable/disable specific features

ENABLE_SPATIAL_ARBITRAGE=true
ENABLE_AI_ANALYSIS=true
ENABLE_EMERGENCY_STOP=true

# =============================================================================

# SECURITY & MONITORING

# =============================================================================

# API Security

API_RATE_LIMIT_ENABLE=true
API_TIMEOUT=30

# JWT Secret for future API authentication

JWT_SECRET=your_jwt_secret_key_for_api_auth

# Health check URL (for monitoring services)

HEALTH_CHECK_URL=http://localhost:8000/health

# =============================================================================

# RASPBERRY PI SPECIFIC

# =============================================================================

# Enable GPIO controls (for LED indicators, buttons, etc.)

ENABLE_GPIO=true

# Enable hardware monitoring

ENABLE_HARDWARE_MONITORING=true

# Temperature alert threshold (Celsius)

TEMPERATURE_ALERT_THRESHOLD=70

# =============================================================================

# DEVELOPMENT/DEBUG SETTINGS

# =============================================================================

# Logging level (DEBUG, INFO, WARNING, ERROR)

LOG_LEVEL=INFO

# Enable debug mode

DEBUG_MODE=false

# Enable performance profiling

ENABLE_PROFILING=false

# Save trade logs to files

SAVE_TRADE_LOGS=true

# =============================================================================

# CLOUD DEPLOYMENT (Optional)

# =============================================================================

# AWS/Cloud credentials (if deploying to cloud)

AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=eu-central-1

# Environment indicator

ENVIRONMENT=development  # development, staging, production