# SmartArb Engine Environment Variables
# Copy this file to .env and fill in your actual values

# =============================================================================
# EXCHANGE API CREDENTIALS
# =============================================================================

# Kraken Exchange
KRAKEN_API_KEY=your_kraken_api_key_here
KRAKEN_API_SECRET=your_kraken_api_secret_here

# Bybit Exchange  
BYBIT_API_KEY=your_bybit_api_key_here
BYBIT_API_SECRET=your_bybit_api_secret_here

# MEXC Exchange
MEXC_API_KEY=your_mexc_api_key_here  
MEXC_API_SECRET=your_mexc_api_secret_here

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL Database
POSTGRES_PASSWORD=your_secure_postgres_password
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DATABASE=smartarb
POSTGRES_USERNAME=smartarb_user

# Redis Cache
REDIS_PASSWORD=your_redis_password_if_any
REDIS_HOST=localhost
REDIS_PORT=6379

# =============================================================================
# NOTIFICATION SETTINGS
# =============================================================================

# Telegram Bot (for alerts and notifications)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# Webhook notifications (optional)
WEBHOOK_URL=https://your-webhook-endpoint.com/smartarb

# =============================================================================
# AI CLAUDE INTEGRATION
# =============================================================================

# Claude AI API (for intelligent analysis and optimization)
CLAUDE_API_KEY=your_claude_api_key_here
CLAUDE_API_URL=https://api.anthropic.com/v1/messages

# Alternative AI providers (optional)
OPENAI_API_KEY=your_openai_api_key_if_using_backup

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Encryption key for sensitive data (generate with: openssl rand -hex 32)
ENCRYPTION_KEY=your_32_byte_hex_encryption_key

# JWT secret for API authentication (if implementing web dashboard)
JWT_SECRET=your_jwt_secret_key

# =============================================================================
# ENVIRONMENT SETTINGS
# =============================================================================

# Application environment (development, production)
ENVIRONMENT=development

# Enable debug logging (true/false)
DEBUG_LOGGING=true

# Paper trading mode (true/false) - executes trades without real money
PAPER_TRADING=true

# =============================================================================
# ADVANCED SETTINGS (Optional)
# =============================================================================

# Custom configuration file path
CONFIG_PATH=config/settings.yaml

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Enable Sentry error tracking (optional)
SENTRY_DSN=your_sentry_dsn_if_using

# =============================================================================
# RASPBERRY PI SPECIFIC SETTINGS
# =============================================================================

# GPIO pin for LED status indicator (optional)
STATUS_LED_PIN=18

# Enable hardware monitoring (temperature, etc.)
HARDWARE_MONITORING=true

# =============================================================================
# NOTES
# =============================================================================

# API Permissions Required:
# - Kraken: Query Funds, Query Open/Closed Orders, Create & Cancel Orders
# - Bybit: Read position, Read wallet balance, Trade  
# - MEXC: Spot trading, Read account info

# Security Recommendations:
# 1. Use API keys with minimal required permissions
# 2. Enable IP restrictions on exchange APIs
# 3. Never commit the actual .env file to version control
# 4. Use strong, unique passwords for all services
# 5. Regularly rotate API keys

# Getting Started:
# 1. Copy this file: cp .env.example .env
# 2. Fill in your actual credentials
# 3. Run setup: python scripts/setup_database.py
# 4. Start engine: python -m src.core.engine
